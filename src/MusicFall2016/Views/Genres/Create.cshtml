@model MusicFall2016.Models.Genre
@{
    ViewData["Title"] = "Add an Genre";
}

<h2>Add An Genre</h2>
<form asp-action="Create" method="post" novalidate="novalidate">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label" for="Name">Name</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" type="text" data-val="true" data-val-required="Name is required" id="Name" name="Name" value="">
                <span asp-validation-for="Name" class="text-danger field-validation-valid" data-val-required="The Name field is required." data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-sm btn-danger" style="background-color:black;">
            <a class="btn btn-sm btn-danger" href="/Genres">Back to Genres</a>
        </div>
    </div>
</form>