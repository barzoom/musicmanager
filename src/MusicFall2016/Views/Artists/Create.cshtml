@model MusicFall2016.Models.Artist
@{
    ViewData["Title"] = "Add an Artist";
}

<h2>Add An Artist</h2>
<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" id="Name" name="Name" value="">
                <span asp-validation-for="Name" data-val-required="The Name field is required."class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
        <label class="col-md-2 control-label" for="Bio">Bio</label>
        <div class="col-md-10">
        <input class="form-control" type="text" data-val="true" data-val-required="Bio is required" id="Bio" name="Bio" value="">
        <span class="text-danger field-validation-valid" data-valmsg-for="Bio" data-valmsg-replace="true"></span>
    </div>
</div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-sm btn-warning" style="background-color:black;">
            <a class="btn btn-sm btn-warning"  href="/Artists">Back to Artists</a>
        </div>
    </div>
</form>